<Window x:Class="PresentationWPF.WPFOtherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationWPF"
        mc:Ignorable="d"
        Title="WPFOtherWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Frame x:Name="frmOtherWindow"></Frame>
        <Button x:Name="btnOtherWindowClose" Grid.Row="1" Width="60" 
                Click="btnOtherWindowClose_Click">Close</Button>
    </Grid>
</Window>
